{
  "include": ["app", "server", "remix.env.d.ts", "vite.env.d.ts"],
  "compilerOptions": {
    /* ✅ Language Target and Module System */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* ✅ JS/TS Compatibility */
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* ✅ JSX Support for React */
    "jsx": "react-jsx",

    /* ✅ Strictness & Safety */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    /* ✅ Paths (keep flat, no “extends”) */
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    },

    /* ✅ Node typings */
    "types": ["node"]
  }
}
